exec --no-startup-id numlockx on
exec --no-startup-id ~/bin/set_screen_positions.sh # use arandr to gen this file
set $screen_left DP1
set $screen_middle DP2
set $screen_right HDMI1

workspace 1 output $screen_left
workspace 2 output $screen_middle
workspace 3 output $screen_right
workspace 4 output $screen_left
workspace 5 output $screen_middle
workspace 6 output $screen_right
workspace 7 output $screen_left
workspace 8 output $screen_middle
workspace 9 output $screen_right

################################################################################
# Start up
exec --no-startup-id i3-msg 'workspace 1; exec i3-sensible-terminal'
exec --no-startup-id xsetroot -solid "#333333" # Grey background
exec --no-startup-id redshift # dim screen to red during evening and night
exec --no-startup-id xbindkeys -f ~/.xbindkeysrc # Mouse extra button to <Ctrl>+W
exec --no-startup-id /usr/bin/unclutter -idle 1 & # hide mouse pointer
exec --no-startup-id parcellite # clipboard manager
exec --no-startup-id xautolock -time 10 -locker ~/bin/lock.sh # Auto locking screens (time in minutes)
exec --no-startup-id ~/.Xmodmap # Insert key becomes 'enter'

################################################################################
# Programs Shortucts
bindsym $mod+Return exec i3-sensible-terminal

bindsym $mod+F1 exec i3-sensible-terminal
bindsym $mod+F2 exec google-chrome-stable
bindsym $mod+F3 exec thunar # File explorer
bindsym $mod+F4 exec notebook-server # Button 4
bindsym $mod+F5 exec "i3-nagbar -t error -m 'killall jupyter-notebook?' -b 'Yes' 'exec killall jupyter-notebook'"
bindsym $mod+F6 exec "i3-nagbar -t error -m 'killall jupyter-lab?' -b 'Yes' 'exec killall jupyter-lab'"


bindsym $mod+F11 fullscreen
bindsym Pause exec ~/bin/lock.sh # Fancier Lock
bindsym Print exec shutter -s --disable_systray -e # Screenshot

# Microsoft Natural keyborad
bindsym XF86Launch5 exec i3-sensible-terminal #  Button 1
bindsym XF86Launch6 exec google-chrome-stable # Button 2
bindsym XF86Launch7 exec thunar #  Button 3
bindsym XF86Launch8 exec notebook-server # Button 4
bindsym XF86Launch9 exec "i3-nagbar -t error -m 'Killall notebook server?' -b 'Yes' 'exec killall jupyter-notebook'"

bindsym XF86HomePage workspace 1
bindsym XF86Search workspace 2
bindsym XF86Mail workspace 3
bindsym XF86Favorites exec dmenu_run

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
bindsym XF86Calculator exec --no-startup-id gnome-calculator # or speedcrunch

################################################################################
# i3 shortcuts

# Start dmenu
bindsym $mod+grave exec dmenu_run

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exec "i3-nagbar -t warning -m 'Do you really want to exit i3?' -b 'Yes, exit i3' 'i3-msg exit'"
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+a restart

# Change keyboard layout
set $keyboardMode "keyboard e=ee, u=us, f=fr"
mode $keyboardMode {
        bindsym e exec "setxkbmap ee", mode "default"
        bindsym u exec "setxkbmap us", mode "default"
        bindsym f exec "setxkbmap fr", mode "default"
        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym l resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym h resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Right resize shrink width 10 px or 10 ppt
        bindsym Up resize grow height 10 px or 10 ppt
        bindsym Down resize shrink height 10 px or 10 ppt
        bindsym Left resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+z mode "resize"
bindsym $mod+Shift+y mode $keyboardMode

################################################################################
# Window managment

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# split in horizontal orientation
bindsym $mod+h split h
# split in vertical orientation
bindsym $mod+n split v

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+t layout stacking
bindsym $mod+g layout tabbed
bindsym $mod+b layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

#bindsym $mod+Tab workspace back_and_forth
bindsym Mod1+Tab workspace back_and_forth

